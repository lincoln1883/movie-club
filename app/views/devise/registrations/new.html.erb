<div class="flex flex-col justify-center sm:px-6 sm:py-12 lg:px-8 text-white">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'bg-transparent shadow-2xl text-white rounded px-8 pt-6 pb-8 mx-auto'}) do |f| %>
      <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-gray-300">Sign up</h2>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%
        label_classes = "block text-sm font-medium leading-6 text-gray-300 #{alert ? "text-red-500" : "text-gray-300"}"
        input_classes = "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 #{alert ? "border-red-500" : nil}"
      %>

      <div class="mb-4">
        <%= f.label :username, "Username", class: label_classes %>
        <%= f.text_field :username, autofocus: true, placeholder: "Username", class: input_classes %>
      </div>

      <div class="mb-4">
        <%= f.label :email, "Email", class: label_classes %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: input_classes %>
      </div>

      <div class="mb-4">
        <%= f.label :password, "Password", class: label_classes %>
        <% if @minimum_password_length %>
          <em class="block text-sm font-normal mb-2 text-gray-300">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "password", class: input_classes %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirm password", class: label_classes %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password", class: input_classes %>
      </div>

      <div class="flex flex-col selection:items-center justify-between content-end">
        <%= f.submit "Register", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mb-2" %>
        <div class="flex flex-col gap-1">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
