<div class="w-full">
  <div class="h-96 flex flex-col rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden">
    <img 
      src="https://image.tmdb.org/t/p/w500<%= @movie['backdrop_path'] %>"
      class="w-full h-full" 
      alt="<%= @movie['title'] %>"
      >
  </div>
  <div class="border-r border-b border-l border-gray-400 lg:border-l lg:border-t lg:border-gray-400 bg-transparent text-white rounded-b lg:rounded-l lg:rounded-r p-4 flex flex-col justify-between leading-normal">
    <div class="mb-8">
      <p class="text-gray-300 font-bold">Title:
        <span class="text-pretty m-1 font-light"><%= @movie['title'] %></span>
      </p>
      <p class="text-gray-300 font-bold">Overview:
        <span class="text-pretty m-1 font-light"><%= @movie['overview'] %></span>
      </p>
      <div class="flex flex-col gap-1">
        <p class="text-gray-300 font-bold">Released:
          <span class="text-pretty m-1 font-light"><%= @movie['release_date'] %></span>
        </p>
        <p class="text-gray-300 font-bold">Rating:
          <span class="text-pretty font-light"> <%= @movie['vote_average'].ceil * 10 %>%</span>
        </p>
        <p class="text-gray-300 font-bold">Runtime:
          <span class="font-light"><%= @movie['runtime'] %> minutes</span>
        </p>
        <div class="flex item-center flex-wrap gap-1">
          <p class="text-gray-300 font-bold">Genres: </p>
          <% @movie['genres'].each do |ele| %>
            <span class="text-gray-300 text-base"><%= ele['name'] %></span>
          <% end %>
        </div>
      </div>
      <%= render partial: 'posts/form', locals: { post: @post, movie: @movie } %>
    </div>
    <%= render partial: 'movies/providers' %>
  </div>
</div>