<div>
  <%= form_for @post do |f| %>
    <div class="mb-4">
      <%= f.label :review, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_area :review, class: "w-full p-2 rounded border border-gray-400", placeholder: "Add a review" %>
    </div>

    <div class="flex justify-center">
      <%= f.submit "Submit", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>