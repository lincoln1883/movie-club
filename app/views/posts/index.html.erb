<div class="m-auto h-full">
  <div class="flex flex-col justify-center gap-4">
    <% @posts.each do |post| %>
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <%= image_tag "https://image.tmdb.org/t/p/w500#{post.image}", class: "w-full h-96 object-cover" %>
        <div class="p-4">
          <h1 class="text-2xl font-bold"><%= post.title %></h1>
          <p class="mt-2 text-gray-600"><%= post.review %></p>
          <p>by <span><%= post.author.username %></span></p>
          <div class="flex justify-end mt-4">
            <%= link_to "View", post_path(post), class: "text-white bg-blue-500 p-2 rounded-lg" %>
          </div>
        </div>
      </div>
    <% end %>
</div>
