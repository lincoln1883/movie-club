<div class="flex flex-col items-center">
  <div class="self-start">
    <%= link_to "Back", posts_path, class: "text-blue-500" %>
  </div>
  <div class="flex flex-col gap-2 items-center border-r border-b border-l lg:border-t bg-white rounded-b lg:rounded-b-none lg:rounded-r lg:border-gray-400 rounded-t lg:rounded-l">
    <div class="flex flex-col gap-1 w-full">
      <p class="text-start"><%= @post.author.username %></p>
      <p class="text-start"><%= @post.created_at.strftime("%B %d, %Y") %></p>
    </div>
    <p class="text-sm font-bold self-start"><%= @post.review %></p>
    <div class="flex flex-col gap-2 sm:flex-row">
      <div class="h-96 sm:h-96 sm:w-1/3 flex flex-col  text-center ">
        <img src="https://image.tmdb.org/t/p/w500<%= @post.image %>" alt="<%= @post.title %>" class="w-full h-full">
      </div>
      <div class="flex flex-col gap-1 leading-normal">
        <h1 class="text-3xl font-bold text-center"><%= @post.title %></h1>
        <p class="text-lg text-gray-500">Overview: <%= @post.overview %></p>
        <p class="text-lg text-gray-500">Rating: <%= @post.rating %>%</p>
        <p class="text-lg text-gray-500">Runtime: <%= @post.runtime %> minutes</p>
        <p class="text-lg text-gray-500">Released: <%= @post.release_date %></p>
        <p class="text-lg text-gray-500">Genres: 
          <% @post.genres.each do |genre| %>
          <span class="text-gray-700 text-base"><%= genre %></span>
          <% end %>
        </p>
        <% if current_user.id == @post.author.id %>
        <div class="flex gap-2">
          <%= link_to "Edit", edit_post_path(@post), class: "text-blue-500" %>
          <%= button_to "Delete", post_path(@post), data: { confirm: "Are you sure?" }, method: :delete, class: "text-red-500" %>
        </div>
        <% end %>
        <div class="flex justify-between">
          <div class="flex flex-col">
            <%= render partial: "comments/form",locals: {post: @post}%>
          </div>
          <div class="flex gap-1 p-2">
            <p class="self-end"><%= @post.comments_count %> comments</p>
            <p class="self-end"><%= @post.likes_count %> likes</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>