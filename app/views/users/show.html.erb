<div class="flex justify-center items-center">
  <% if current_user %>
    <div class="flex gap-1">
      <div class="flex flex-col">
        <h1>User Profile</h1>
        <p>
          <%= current_user.username %>
        </p>
        <p class="">
          Full Name:
        <span>
          <%= current_user.first_name %>
        </span>
        <span>
          <%= current_user.last_name %>
        </span>
        </p>
        <p>
          Email: <%= current_user.email %>
        </p>
        <p>
          Bio: <%= current_user.bio %>
        </p>
        <%= link_to 'Edit Profile', edit_user_registration_path, class: 'text-blue-500 hover:text-blue-700' %>
      </div>
      <div>
      <% if current_user.avatar.present? %>
        <%= image_tag(current_user.avatar, class: "w-48 h-48") %>
      <% end %>
      </div>
    <%= current_user.post_count %>
  <% end %>
  </div>
  <div class="flex flex-col gap-2">
    <h2>Posts</h2>
    <% if current_user.posts.any? %>
      <% current_user.recent_posts.each do |post| %>
        <div class="flex flex-col gap-1">
          <h3><%= post.title %></h3>
          <p><%= post.created_at %></p>
          <%= link_to 'Edit Post', edit_post_path(post), class: 'text-blue-500 hover:text-blue-700' %>
          <%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:text-red-700' %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
