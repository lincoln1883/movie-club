<div class="flex justify-center flex-col gap-2 items-center h-full md:flex-row">
  <% if current_user %>
    <div class="flex gap-1 text-white rounded shadow-2xl self-start">
      <div>
        <% if current_user.avatar.present? %>
          <%= image_tag(current_user.avatar, class: "w-40 h-40", alt:'') %>
        <% end %>
      </div>
      <div class="flex flex-col p-2 gap-0.5">
        <p class="text-sm font-medium"><%= current_user.username %></p>
        <p class="text-md font-medium">Full Name:
          <span class="text-sm"><%= current_user.first_name %></span>
          <span class="text-sm"><%= current_user.last_name %></span>
        </p>
        <p class="text-md font-medium">Email: <%= current_user.email %></p>
        <p class="text-md font-medium">Bio: <%= current_user.bio %></p>
        <p class="text-white">Number of posts: <%= current_user.post_count %></p>
        <%= link_to 'Edit Profile', edit_user_registration_path, class: 'text-blue-500 hover:text-blue-700' %>
      </div>
    </div>
  <% end %>
  <div class="flex flex-col gap-2">
    <h2 class="text-white">Recent Posts</h2>
    <% if current_user.posts.any? %>
      <% current_user.recent_posts.each do |post| %>
        <div class="flex flex-col gap-1">
          <div class="bg-transparent shadow-2xl rounded-lg overflow-hidden flex flex-col sm:flex-row">
        <div class="h-[300px] sm:w-[50%]">
          <%= image_tag "https://image.tmdb.org/t/p/w500#{post.image}", class: "w-full h-full", alt: ''%>
        </div>
        <div class="p-4 sm:w-[50%] sm:flex sm:flex-col sm:justify-between text-gray-300">
          <div>
            <div>
              <p>Posted: 
                <span class="text-start"><%= time_ago_in_words(post.created_at) %> ago</span>
              </p>
            </div>
            <h1 class="text-2xl font-bold"><%= post.title %></h1>
            <p class="text-gray-300"><%= post.review %></p>
          </div>
          <div class="flex justify-between items-center">
            <div class="flex justify-center items-center gap-2">
              <%= link_to 'Edit Post', edit_post_path(post), class: 'text-blue-500 hover:text-blue-700' %>
              <%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:text-red-700' %>
            </div>
            </div>
            <div class="flex gap-1">
              <p><%= post.comments_count %> comments</p>
              <p><%= post.likes_count %> likes</p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
